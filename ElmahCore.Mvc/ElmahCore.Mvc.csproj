<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>1.3.0</Version>
    <PackageProjectUrl>https://github.com/danielDevelops/ElmahCore</PackageProjectUrl>
    <AssemblyVersion>1.3.0.0</AssemblyVersion>
    <FileVersion>1.3.0.0</FileVersion>
    <AssemblyName>ElmahCore.Mvc</AssemblyName>
    <PackageId>Elmah.NetCore</PackageId>
    <Authors>danielDevelops</Authors>
    <Company>danielDevelops</Company>
    <Product>ElmahCore</Product>
    <NeutralLanguage>en-001</NeutralLanguage>
    <RepositoryUrl>https://www.nuget.org/packages/danielDevelopsElmahCore</RepositoryUrl>
    <PackageTags>net-core elmah mvc-core asp-net-core asp-net-core-mvc elmah-core netcore netcore2 netcore20 mvc mvc6 aspnetcore aspnetcoremvc</PackageTags>
    <Description>Elmah for ASP.NET Core based on ELMAHCore</Description>
    <Copyright>danielDevelops</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="Bootstrap.css" />
    <EmbeddedResource Include="ErrorLog.css" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Authentication.Abstractions" Version="2.1.1" />
    <PackageReference Include="Microsoft.AspNetCore.Http" Version="2.1.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ElmahCore\ElmahCore.csproj" />
  </ItemGroup>

</Project>
